{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Categories list</h1>

   
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('adminCategories_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.nom }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('adminCategories_show', { 'id': category.id }) }}"><i class="icon-book"></i>show</a>
                        </li>
                        <li>
                            <a href="{{ path('adminCategories_edit', { 'id': category.id }) }}"><i class="icon-edit"></i>edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adminCategories_new') }}">Create a new category</a>
        </li>
    </ul>
{% endblock %}
