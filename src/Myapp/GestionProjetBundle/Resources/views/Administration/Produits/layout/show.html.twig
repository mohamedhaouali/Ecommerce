{% extends '::layout/layoutAdmin.html.twig' %}


{% block body %}
    <h1>Produit</h1>

 <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ produit.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{% if produit.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</td>
            </tr>
            
               <tr>
                <th>Tva</th>
                <td>{{ produit.tva }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adminProduits_index') }}" class="btn btn-info">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('adminProduits_edit', { 'id': produit.id }) }}" class="btn btn-success">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger"value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
