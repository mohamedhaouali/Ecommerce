{% extends '::base.html.twig'%}

{% block body %}
	<div class="container">
		<div class="row">
  <div class="span3">
                {% include '::modulesUsed/navigation.html.twig' %}
                {% include 'UtilisateursBundle:Default:modulesUsed/utilisateursConnecte.html.twig' %}
                {{ render(controller('GestionProjetBundle:Panier:menu')) }}
            </div>
          


    <div class="span9">
        {% include ':layout:messages.html.twig' %}
        <h2>Factures</h2>
        <form>
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Références</th>
                    <th>Date</th>
                    <th>Prix TTC</th>
                    <th>Voir</th>
                </tr>
                </thead>
                <tbody>
                {% if factures|length == 0 %}
                    <tr>
                        <td colspan="4">Aucune facture actuellement</td>
                    </tr>
                {% endif %}
                {% for facture in factures %}
                    <tr>
                        <td>FA-{{ facture.reference }}</td>
                        <td>{{ facture.date|date('d/m/Y') }}</td>
                        <td>{{ facture.commande.prixTTC }} Dt</td>
                        <td><a href="{{ path('page_facturePDF', { 'id' : facture.id }) }}" target="_blank"><i class="icon-print"></i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
 

            </table>
        </form>

    </div>

{% endblock %}   