{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Impression</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ impression.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ impression.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ impression.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ impression.prix }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('impression_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('impression_edit', { 'id': impression.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
