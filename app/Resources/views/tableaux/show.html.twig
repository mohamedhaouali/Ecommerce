{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>tableaux</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tableaux.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ tableaux.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tableaux.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ tableaux.prix }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{% if tableaux.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</td>
            </tr>
              <tr>
                <th>Tva</th>
                <td>{{ tableaux.tva }}</td>
            </tr>
            
            
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tableaux_modifier') }}" class="btn btn-info">Retour a la page Modifier</a>
        </li>
        <li>
            <a href="{{ path('tableaux_edit', { 'id': tableaux.id }) }}"class="btn btn-success">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
               <input type="submit"  class="btn btn-danger" value="Supprimer" />
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}


