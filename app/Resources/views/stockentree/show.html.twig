{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Stockentree</h1>

   <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stockEntree.id }}</td>
            </tr>
            <tr>
                <th>Nomduproduit</th>
                <td>{{ stockEntree.nomduproduit }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ stockEntree.quantite }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ stockEntree.prix }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if stockEntree.date %}{{ stockEntree.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('stockentree_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('stockentree_edit', { 'id': stockEntree.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
