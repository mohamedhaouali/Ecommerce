{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Stocksorties list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomdeuproduit</th>
                <th>Quantite</th>
                <th>Nomclient</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stocksortie in stocksorties %}
            <tr>
                <td><a href="{{ path('stocksortie_show', { 'id': stocksortie.id }) }}">{{ stocksortie.id }}</a></td>
                <td>{{ stocksortie.nomdeuproduit }}</td>
                <td>{{ stocksortie.quantite }}</td>
                <td>{{ stocksortie.nomclient }}</td>
                <td>{% if stocksortie.date %}{{ stocksortie.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('stocksortie_show', { 'id': stocksortie.id }) }}"class="btn btn-info"><i class="icon-book"></i>Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('stocksortie_edit', { 'id': stocksortie.id }) }}" class="btn btn-danger"><i class="icon-edit"></i>edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('stocksortie_new') }}" class="btn btn-success">Ajout d'un nouveaux produit stocksortie</a>
        </li>
    </ul>
{% endblock %}
