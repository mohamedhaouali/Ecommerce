{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>onduleur list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Tva</th>
                <th>Disponible</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
     {% for onduleur in onduleurs %}
            <tr>
                <td><a href="{{ path('onduleur_show', { 'id': onduleur.id }) }}">{{ onduleur.id }}</a></td>
                <td>{{ onduleur.titre }}</td>
                <td>{{ onduleur.description }}</td>
                <td>{{ onduleur.prix }}</td>
                 <td>{{ onduleur.tva }}</td>
                <td>{% if onduleur.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</td>
                <td>  <img src="{{asset('uploads/'~onduleur.path)}}" alt="DevAndClick" width="300" height="300"></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('onduleur_show', { 'id':onduleur.id }) }}" class="btn btn-info"><i class="icon-book"></i>Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('onduleur_edit', { 'id':onduleur.id }) }}" class="btn btn-danger"><i class="icon-edit"></i>edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('onduleur_new') }}" class="btn btn-success">Ajout d'un nouveaux onduleur</a>
        </li>
    </ul>
{% endblock %}


