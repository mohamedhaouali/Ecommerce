{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Onduleur</h1>

   <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ onduleur.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ onduleur.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ onduleur.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ onduleur.prix }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{% if onduleur.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</td>
            </tr>
            
             <tr>
                <th>TVA</th>
                <td>{{ onduleur.tva }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('onduleur_modifier') }}" class="btn btn-info">Retour a la page Modifier</a>
        </li>
        <li>
            <a href="{{ path('onduleur_edit', { 'id': onduleur.id }) }}"class="btn btn-success">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
              <input type="submit"  class="btn btn-danger" value="Supprimer" />
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
