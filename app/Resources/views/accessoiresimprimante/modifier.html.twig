{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>accessoiresimprimante list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Tva</th>
                <th>Disponible</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
          {% for accessoiresimprimante in accessoiresimprimantes %}
            <tr>
                <td><a href="{{ path('accessoiresimprimante_show', { 'id': accessoiresimprimante.id }) }}">{{ accessoiresimprimante.id }}</a></td>
                <td>{{ accessoiresimprimante.titre }}</td>
                <td>{{ accessoiresimprimante.description }}</td>
                <td>{{ accessoiresimprimante.prix }}</td>
                <td>{{ accessoiresimprimante.tva }}</td>
                <td>{% if accessoiresimprimante.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</td>
                <td>  <img src="{{asset('uploads/'~accessoiresimprimante.path)}}" alt="DevAndClick" width="300" height="300"></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('accessoiresimprimante_show', { 'id': accessoiresimprimante.id }) }}" class="btn btn-info"><i class="icon-book"></i>Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('accessoiresimprimante_edit', { 'id': accessoiresimprimante.id }) }}" class="btn btn-danger"><i class="icon-edit"></i>edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('accessoiresimprimante_new') }}" class="btn btn-success">Ajout d'un nouveaux accessoires imprimante</a>
        </li>
    </ul>
{% endblock %}
























