{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>imprimante list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Tva</th>
                <th>Disponible</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
    {% for imprimante in imprimantes %}
            <tr>
                <td><a href="{{ path('fournituredubureau_show', { 'id': imprimante.id }) }}">{{ imprimante.id }}</a></td>
                <td>{{ imprimante.titre }}</td>
                <td>{{ imprimante.description }}</td>
                <td>{{ imprimante.prix }}</td>
                 <td>{{ imprimante.tva }}</td>
                <td>{% if imprimante.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</td>
                <td>  <img src="{{asset('uploads/'~imprimante.path)}}" alt="DevAndClick" width="300" height="300"></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('imprimante_show', { 'id':imprimante.id }) }}" class="btn btn-info"><i class="icon-book"></i>Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('imprimante_edit', { 'id':imprimante.id }) }}" class="btn btn-danger"><i class="icon-edit"></i>edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('imprimante_new') }}" class="btn btn-success">Ajout d'un nouveaux imprimante</a>
        </li>
    </ul>
{% endblock %}

