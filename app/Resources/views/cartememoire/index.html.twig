{% extends 'base.html.twig' %}

{% block body %}
    
    <div class="container">
        <div class="row">
            <div class="span3">
             {% include '::modulesUsed/navigationstockage.html.twig' %}
              
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {% include 'UtilisateursBundle:Default:modulesUsed/utilisateursConnecte.html.twig' %}
                {% else %}
                    {% include 'UtilisateursBundle:Default:modulesUsed/utilisateurs.html.twig' %}
                {% endif %}
                {{ render(controller('GestionProjetBundle:Panier:menu')) }}
            </div>
   
  <div class="span9">
                
                    <ul class="thumbnails">
                {% for cartememoire in cartememoires %}
                            <li class="span3">
                                <div class="thumbnail">
                                    <img src="{{asset('uploads/'~cartememoire.path)}}" alt="DevAndClick" width="300" height="150">

                                    <div class="caption">
                                        <h4>{{cartememoire.titre}}</h4>
                                        <p>{{cartememoire.description}}</p>
                                        <p>Prix : {{cartememoire.prix}}DT</p>
                                        <p>{% if cartememoire.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</p>
                                        <a class="btn btn-primary" href="{{ path('produit_recherche') }}">Plus d'infos</a>
                                        
                                          
                                        

                                      

                                    </div>
                                </div>
                            </li>
                        {%endfor%}
                    </ul>
                    
   <div class="navigation">
    {{ knp_pagination_render(cartememoires) }}
</div>
                 
                </div>   


          

        </div>
                    
   
    </div>

</div>


{% endblock %}
        
            
               
            

































