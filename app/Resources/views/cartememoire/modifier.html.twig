{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>carte memoire list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Tva</th>
                <th>Disponible</th>
              
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cartememoire in cartememoires %}
            <tr>
                <td><a href="{{ path('cartememoire_show', { 'id': cartememoire.id }) }}">{{ cartememoire.id }}</a></td>
                <td>{{ cartememoire.titre }}</td>
                <td>{{ cartememoire.description }}</td>
                <td>{{ cartememoire.prix }}</td>
                <td>{{ cartememoire.tva }}</td>
                <td>{% if cartememoire.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</td>
                <td>  <img src="{{asset('uploads/'~cartememoire.path)}}" alt="DevAndClick" width="300" height="300"></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cartememoire_show', { 'id':cartememoire.id }) }}" class="btn btn-info"><i class="icon-book"></i>Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('cartememoire_edit', { 'id':cartememoire.id }) }}" class="btn btn-danger"><i class="icon-edit"></i>edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cartememoire_new') }}" class="btn btn-success">Ajout d'un nouveaux cartememoire</a>
        </li>
    </ul>
{% endblock %}

