{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>accessoires Telephone list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Disponible</th>
                <th>Tva</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
   {% for accessoiresTelephone in accessoiresTelephones %}
            <tr>
                <td><a href="{{ path('accessoirestelephone_show', { 'id': accessoiresTelephone.id }) }}">{{ accessoiresTelephone.id }}</a></td>
                <td>{{ accessoiresTelephone.titre }}</td>
                <td>{{ accessoiresTelephone.description }}</td>
                <td>{{accessoiresTelephone.prix }}</td>
                <td>{% if accessoiresTelephone.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</td>
                <td>{{ accessoiresTelephone.tva }}</td>
                <td>  <img src="{{asset('uploads/'~accessoiresTelephone.path)}}" alt="DevAndClick" width="300" height="300"></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('accessoirestelephone_show', { 'id':accessoiresTelephone.id }) }}" class="btn btn-info"><i class="icon-book"></i>Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('accessoirestelephone_edit', { 'id':accessoiresTelephone.id }) }}" class="btn btn-danger"><i class="icon-edit"></i>edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('accessoirestelephone_new') }}" class="btn btn-success">Ajout d'un nouveaux accessoiresTelephone</a>
        </li>
    </ul>
{% endblock %}
