{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Informatique</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ informatique.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ informatique.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ informatique.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ informatique.prix }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{% if informatique.disponible %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admininformatique_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admininformatique_edit', { 'id': informatique.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
