{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Cartouches imprimante</h1>

   <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cartouchesimprimante.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ cartouchesimprimante.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ cartouchesimprimante.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ cartouchesimprimante.prix }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{% if cartouchesimprimante.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</td>
            </tr>
            
            <tr>
                <th>Tva</th>
                <td>{{ cartouchesimprimante.tva }}</td>
            </tr>
            
          
            
            
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cartouchesimprimante_modifier') }}" class="btn btn-info">Retour a la page Modifier</a>
        </li>
        <li>
            <a href="{{ path('cartouchesimprimante_edit', { 'id': cartouchesimprimante.id }) }}"class="btn btn-success">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit"  class="btn btn-danger" value="Supprimer" />
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
