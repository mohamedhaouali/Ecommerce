{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Destockage</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ destockage.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ destockage.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ destockage.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ destockage.prix }}</td>
            </tr>
            
            <tr>
                <th>Prix1</th>
                <td>{{ destockage.prix1 }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{% if destockage.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</td>
            </tr>
            
                <tr>
                <th>Tva</th>
                <td>{{ destockage.tva }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('destockage_modifier') }}" class="btn btn-info">Retour a la page Modifier</a>
        </li>
        <li>
            <a href="{{ path('destockage_edit', { 'id': destockage.id }) }}" class="btn btn-success">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            
              <input type="submit"  class="btn btn-danger" value="Supprimer" />
            
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}











