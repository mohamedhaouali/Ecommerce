{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>ordinateur portable list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Tva</th>
                <th>Disponible</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
    {% for ordinateurportable in ordinateurportables %}
            <tr>
                <td><a href="{{ path('ordinateurportable_show', { 'id': ordinateurportable.id }) }}">{{ ordinateurportable.id }}</a></td>
                <td>{{ ordinateurportable.titre }}</td>
                <td>{{ ordinateurportable.description }}</td>
                <td>{{ ordinateurportable.prix }}</td>
                <td>{{ ordinateurportable.tva }}</td>
                <td>{% if ordinateurportable.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</td>
                <td>  <img src="{{asset('uploads/'~ordinateurportable.path)}}" alt="DevAndClick" width="300" height="300"></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('ordinateurportable_show', { 'id':ordinateurportable.id }) }}" class="btn btn-info"><i class="icon-book"></i>Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('ordinateurportable_edit', { 'id':ordinateurportable.id }) }}" class="btn btn-danger"><i class="icon-edit"></i>edit</a>
                        </li>
                        
                                          
        
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ordinateurportable_new') }}" class="btn btn-success">Ajout d'un nouveaux ordinateur portable</a>
        </li>
    </ul>
{% endblock %}



