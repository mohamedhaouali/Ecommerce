{% extends '::layout/layoutAdmin.html.twig' %}


{% block body %}
    <h1>Ordinateur portable</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ordinateurportable.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ ordinateurportable.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ordinateurportable.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ ordinateurportable.prix }}</td>
            </tr>
            
             <tr>
                <th>Tva</th>
                <td>{{ ordinateurportable.tva }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{% if ordinateurportable.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ordinateurportable_modifier') }}" class="btn btn-info">Retour a la page Modifier</a>
        </li>
        <li>
            <a href="{{ path('ordinateurportable_edit', { 'id': ordinateurportable.id }) }}" class="btn btn-success">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
               
                 <input type="submit"  class="btn btn-danger" value="Supprimer" />
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
