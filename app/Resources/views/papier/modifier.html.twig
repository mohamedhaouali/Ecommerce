{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Papier list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Tva</th>
                <th>Disponible</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
       {% for papier in papiers %}
            <tr>
                <td><a href="{{ path('papier_show', { 'id': papier.id }) }}">{{ papier.id }}</a></td>
                <td>{{ papier.titre }}</td>
                <td>{{ papier.description }}</td>
                <td>{{ papier.prix }}</td>
                <td>{{ papier.tva }}</td>
                <td>{% if papier.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</td>
                <td>  <img src="{{asset('uploads/'~papier.path)}}" alt="DevAndClick" width="300" height="300"></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('papier_show', { 'id': papier.id }) }}" class="btn btn-info"><i class="icon-book"></i>Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('papier_edit', { 'id': papier.id }) }}" class="btn btn-danger"><i class="icon-edit"></i>edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('papier_new') }}" class="btn btn-success">Ajout d'un nouveaux papier</a>
        </li>
    </ul>
{% endblock %}











