{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>stockage list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                 <th>Tva</th>
                <th>Disponible</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stockage in stockages %}
            <tr>
                <td><a href="{{ path('stockage_show', { 'id': stockage.id }) }}">{{ stockage.id }}</a></td>
                <td>{{ stockage.titre }}</td>
                <td>{{ stockage.description }}</td>
                <td>{{ stockage.prix }}</td>
                <td>{{ stockage.tva }}</td>
                <td>{% if stockage.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</td>
              
                <td>  <img src="{{asset('uploads/'~stockage.path)}}" alt="DevAndClick" width="300" height="300"></td>
              
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('stockage_show', { 'id':stockage.id }) }}" class="btn btn-info"><i class="icon-book"></i>Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('stockage_edit', { 'id':stockage.id }) }}" class="btn btn-danger"><i class="icon-edit"></i>edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('stockage_new') }}" class="btn btn-success">Ajout d'un nouveaux stockage</a>
        </li>
    </ul>
{% endblock %}

