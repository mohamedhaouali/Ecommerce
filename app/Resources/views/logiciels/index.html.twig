{% extends 'base.html.twig' %}

{% block body %}
    
    <div class="container">
        <div class="row">
            <div class="span3">
                {% include '::modulesUsed/navigation.html.twig' %}
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {% include 'UtilisateursBundle:Default:modulesUsed/utilisateursConnecte.html.twig' %}
                {% else %}
                    {% include 'UtilisateursBundle:Default:modulesUsed/utilisateurs.html.twig' %}
                {% endif %}
                {{ render(controller('GestionProjetBundle:Panier:menu')) }}
            </div>
   
  <div class="span9">
                
                    <ul class="thumbnails">
                    {% for logiciel in logiciels %}
                            <li class="span3">
                                <div class="thumbnail">
                                    <img src="{{asset('uploads/'~logiciel.path)}}" alt="DevAndClick" width="300" height="300">

                                    <div class="caption">
                                        <h4>{{logiciel.titre}}</h4>

                                        <p>{{logiciel.description}}</p>
                                        <p>Prix : {{logiciel.prix}}DT</p>
                                        <p>{% if logiciel.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</p>
                                        
<a class="btn btn-primary" href="{{ path('produit_recherche') }}">Plus d'infos</a>
                                      

                                    </div>
                                </div>
                            </li>
                        {%endfor%}
                    </ul>
  <div class="navigation">
    {{ knp_pagination_render(logiciels) }}
</div>  
                 
                </div>   


          

        </div>
                    
    
                    
    </div>

</div>


{% endblock %}
        
            
               
            
























