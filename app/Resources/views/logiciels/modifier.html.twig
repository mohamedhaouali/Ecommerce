{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>logiciel list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Tva</th>
                <th>Disponible</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
     {% for logiciel in logiciels %}
            <tr>
                <td><a href="{{ path('logiciels_show', { 'id': logiciel.id }) }}">{{ logiciel.id }}</a></td>
                <td>{{ logiciel.titre }}</td>
                <td>{{ logiciel.description }}</td>
                <td>{{ logiciel.prix }}</td>
                <td>{{ logiciel.tva }}</td>
                <td>{% if logiciel.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</td>
                <td>  <img src="{{asset('uploads/'~logiciel.path)}}" alt="DevAndClick" width="300" height="300"></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('logiciels_show', { 'id':logiciel.id }) }}" class="btn btn-info"><i class="icon-book"></i>Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('logiciels_edit', { 'id':logiciel.id }) }}" class="btn btn-danger"><i class="icon-edit"></i>edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('logiciels_new') }}" class="btn btn-success">Ajout d'un nouveaux logiciel</a>
        </li>
    </ul>
{% endblock %}

