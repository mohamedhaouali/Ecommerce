{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>scanner list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Tva</th>
                <th>Disponible</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
     {% for scanner in scanners %}
            <tr>
                <td><a href="{{ path('fournituredubureau_show', { 'id': scanner.id }) }}">{{ scanner.id }}</a></td>
                <td>{{ scanner.titre }}</td>
                <td>{{ scanner.description }}</td>
                <td>{{ scanner.prix }}</td>
                <td>{{ scanner.tva }}</td>
                <td>{% if scanner.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</td>
                <td>  <img src="{{asset('uploads/'~scanner.path)}}" alt="DevAndClick" width="300" height="300"></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('scanner_show', { 'id':scanner.id }) }}" class="btn btn-info"><i class="icon-book"></i>Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('scanner_edit', { 'id':scanner.id }) }}" class="btn btn-danger"><i class="icon-edit"></i>edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('scanner_new') }}" class="btn btn-success">Ajout d'un nouveaux scanner</a>
        </li>
    </ul>
{% endblock %}

