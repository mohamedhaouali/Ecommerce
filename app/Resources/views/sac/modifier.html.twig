{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Sac list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Disponible</th>
                <th>Tva</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
 {% for sac in sacs %}
            <tr>
                <td><a href="{{ path('sac_show', { 'id': sac.id }) }}">{{ sac.id }}</a></td>
                <td>{{ sac.titre }}</td>
                <td>{{ sac.description }}</td>
                <td>{{ sac.prix }}</td>
                <td>{% if sac.disponible %}<font color="green">Disponible</font>{% else %}<font color="red">Epuise</font>{% endif %}</td>
                <td>{{ sac.tva }}</td>
                <td>  <img src="{{asset('uploads/'~sac.path)}}" alt="DevAndClick" width="300" height="300"></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('sac_show', { 'id':sac.id }) }}" class="btn btn-info"><i class="icon-book"></i>Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('sac_edit', { 'id':sac.id }) }}" class="btn btn-danger"><i class="icon-edit"></i>edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sac_new') }}" class="btn btn-success">Ajout d'un nouveaux Sac</a>
        </li>
    </ul>
{% endblock %}
